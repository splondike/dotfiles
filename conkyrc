conky.config = {
   out_to_console = true,
   background = false,
   update_interval = 30,
   total_run_times = 0,
   double_buffer = true,
   border_inner_margin = 0,
   border_outer_margin = 0,
   use_spacer = 'none',
   if_up_strictness = 'address',
   short_units = true
}

conky.text = [[
WD: ${downspeedf wlp3s0} KiB WU: ${upspeedf wlp3s0} KiB | ED: ${downspeedf em1} KiB EU: ${upspeedf em1} KiB | load: $loadavg | l: ${head /var/log/backup_local_status 1} r: ${head /var/log/backup_remote_status 1} rp: ${head /var/log/backup_password_status 1} | $battery_time $battery | ${time %d %b, %I:%M }
]]
